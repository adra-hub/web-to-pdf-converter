{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { 
      "src": "api/generate-pdf.js", 
      "use": "@vercel/node",
      "config": {
        "memory": 3008,
        "maxDuration": 60
      }
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
